@{
    ViewBag.Title = "Contact";
}
@if (TempData["msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["msg"]
    </div>
}

<main aria-labelledby="title">
    <aside class="sidebar">
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("login", "admin")">Admin</a></li>
                <li><a href="@Url.Action("login", "employee")">Employee</a></li>
                <li><a href="@Url.Action("login", "restaurant")">Restaurant</a></li>
                <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
            </ul>
        </nav>
    </aside>

    <section class="content">
        <h2 id="title">@ViewBag.Title.</h2>
        <h3>@ViewBag.Message</h3>
        <p class="lead">Contact</p>
    </section>

    <address>
        One Microsoft Way<br />
        Redmond, WA 98052-6399<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>

    <address>
        <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
        <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
    </address>
</main>

<link href="@Url.Content("~/Style/myStyle.css")" rel="stylesheet" />